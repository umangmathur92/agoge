<div id="site-container" class="context-loader-container" data-pjax-container="">
  <div class="auth-form" id ="login">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="auth-form-header">
        <h1>Sign in</h1>
      </div>
      <% if devise_error_messages! != "" %>
        <div class="error_box"><%= devise_error_messages! %></div>
      <%end%>
      <div class="auth-form-body">
        <div class="form-inline">
          *
          <%= f.label :email %>
        </div>
        <%= f.text_field :email,:required => true, :autocapitalize => "off", :autofocus => "autofocus", :class => "input-block", :required => true %>
        <div class="form-inline">
          *
          <%= f.label :password %>
        </div>
        <%= f.password_field :password,:required => true, :autocomplete => "disabled", :class => "input-block", :required => true %>
        <div class="form-inline">
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "checkbox inline" %>
          <% end %>
        </div>
        <div>
          <%= f.submit "Sign in", :class => "btn btn-primary" %>
        </div>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
